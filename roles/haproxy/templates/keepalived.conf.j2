{% if lb_name == 'lb-master' %}
  {% set role = 'MASTER' %}
  {% set priority = 100 %}
  {% set Ha_ip = {{ HA_Master }} %}
{% elif lb_name == 'lb-backup' %}
  {% set role = 'BACKUP' %}
  {% set priority = 90 %}
  {% set Ha_ip = {{ HA_Backup }} %}
{% endif %}

global_defs {
   router_id k8s_{{ role }}
}

vrrp_script Checkhaproxy {
    script "/etc/keepalived/check_haproxy.sh"
    interval 3
    timeout 9
    fall 2
    rise 2
}

vrrp_instance VI_1 {
    state {{ role }}
    interface {{ nic }}
    virtual_router_id  100
    priority {{  priority }}
    advert_int 1
    nopreempt
    mcast_src_ip {{ Ha_ip }}
    authentication {
        auth_type PASS
        auth_pass kuburnetes
    }
    unicast_peer {
    {% for host in groups['haproxy'] %}
      {{ host }}   
    {% endfor %}

    }
    virtual_ipaddress {
        {{vip}}
    }
    track_script {
        Checkhaproxy
    }

}
